!!!DOCTYPE html
%html
  %head
    %title OstBlockCup
    -#= stylesheet_link_tag "style"
    -#= stylesheet_link_tag "custom"
    = stylesheet_link_tag :defaults
    = stylesheet_link_tag :bootstrap
    = javascript_include_tag :defaults
    %meta{:'http-equiv' => 'Content-Type', :content => "text/html; charset=UTF-8"}

    = yield(:head)
    = csrf_meta_tag

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top
      %div.navbar-inner
        %div.container
          %div.nav-collapse.collapse
            %ul.nav
              %li
                =link_to :Boulder, boulders_path
              %li
                =link_to :Eintragen, root_path
              %li
                =link_to "Mobile Seite", root_path + "?mobile=true"
              %li
                =link_to :Rangliste, ranking_path
              %li
                - if current_user
                  = link_to :ausloggen, user_session_path, :method => :delete
                - else
                  = link_to :Admin, new_user_session_url

    %div.container
      = content_for?(:content) ? yield(:content) : yield
  = javascript_include_tag :bootstrap
  = javascript_include_tag :file_upload

  :javascript
    $('#sponsors').cycle('fade');
