%div#middle.fieldset
  = form_for @user_session, :url => user_session_path do |f|
    %p
      = f.label :Benutzername
    %p
      = f.text_field :login
    %p
      = f.label :password
    %p
      = f.password_field :password
    %p
      = f.check_box :remember_me
    %p
      = f.label "eingeloggt bleiben"
    %p= image_submit_tag "/images/boulder/logbutton.png", :class => 'image-submit'


