%p
  %div#tabs
    %ul
      %li= link_to  "alle", "#tabs-1"
      %li= link_to  "Männer", "#tabs-2"
      %li= link_to  "Frauen", "#tabs-3"
      -#%li= link_to  "Jugend A", "#tabs-2"
      -#%li= link_to  "Jugend B", "#tabs-3"
      -#%li= link_to  "Jugend C", "#tabs-4"
    -#- if current_user
      = form_for :filter, :url => :ranking, :remote => true do |f|
        = f.select :Wertung, [["alle", 1], ["Männer", 2], ["Frauen", 3], ["Kinder (0-12)", 4], ["U18 (13-17) m", 5], ["U18 (13-17) w", 6]]
        = f.submit :filter
      = link_to "Beamer Modus", :beamer_modus => true
    %p
      = "Wird wieder aktualisiert in: #{120 -(Time.now - @cache_time).to_i} Sekunden"
    %div#tabs-1
      %p
        %table.table-striped.table-hover#table-relax.tablesorter
          = render :partial => 'participants', :locals => {:participants => @participants_relax}
        %span#tab1

    %div#tabs-2
      %p
        %table.table-striped.table-hover#table-power.tablesorter
          = render :partial => 'participants', :locals => {:participants => @participants_men}
        %span#tab2
    %div#tabs-3
      %p
        %table.table-striped.table-hover#table-leipzig.tablesorter
          = render :partial => 'participants', :locals => {:participants => @participants_women}
        %span#tab3
    -#%div#tabs-2
      %p
        %table.table-striped.table-hover#table-seniors.tablesorter
          = render :partial => 'participants', :locals => {:participants => @participants_A}
        %span#tab2
    -#%div#tabs-3
      %p
        %table.table-striped.table-hover#table-all.tablesorter
          = render :partial => 'participants', :locals => {:participants => @participants_B}
        %span#tab3
    -#%div#tabs-4
      %p
        %table.table-striped.table-hover#table-achtzehn.tablesorter
          = render :partial => 'participants', :locals => {:participants => @participants_C}
        %span#tab4

